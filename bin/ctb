#!/usr/bin/env php
<?php

declare(strict_types=1);

use CyberSpectrum\ContaoToolBox\Console\ToolBoxApplication;
use CyberSpectrum\ContaoToolBox\Util\ErrorHandler;

require_once __DIR__ . '/../vendor/autoload.php';

error_reporting(-1);

ErrorHandler::register();

$console = new ToolBoxApplication('Contao Toolbox', '@git-version@ (@release-date@)');
exit($console->run());
