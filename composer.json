{
  "name": "cyberspectrum/contao-toolbox",
  "description": "Contao ToolBox",
  "license": "LGPL-3.0-or-later",
  "keywords": [
    "Contao",
    "Toolbox",
    "Helper"
  ],
  "authors": [
    {
      "name": "Christian Schiffler",
      "email": "c.schiffler@cyberspectrum.de"
    }
  ],
  "homepage": "https://cyberspectrum.de",
  "require": {
    "php": "^8.1",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-tokenizer": "*",
    "cyberspectrum/php-transifex": "^2.0.2",
    "http-interop/http-factory-guzzle": "^1.2",
    "php-http/guzzle7-adapter": "^1.0",
    "psr/log": "^3.0.0",
    "symfony/console": "^6.2",
    "symfony/filesystem": "^6.2",
    "symfony/finder": "^6.2"
  },
  "require-dev": {
    "phpcq/runner-bootstrap": "^1.0@dev"
  },
  "autoload": {
    "psr-4": {
      "CyberSpectrum\\ContaoToolBox\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CyberSpectrum\\ContaoToolBox\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/ctb"
  ],
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    },
    "bin-dir": "bin",
    "sort-packages": true
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
}
