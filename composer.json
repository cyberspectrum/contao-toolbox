{
  "name": "cyberspectrum/contao-toolbox",
  "description": "Contao ToolBox",
  "keywords": [
    "Contao",
    "Toolbox",
    "Helper"
  ],
  "homepage": "http://cyberspectrum.de",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Christian Schiffler",
      "email": "c.schiffler@cyberspectrum.de"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-dom": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "cyberspectrum/php-transifex": "~1.0",
    "php-http/guzzle6-adapter": "~1.1",
    "symfony/console": "~2.8 | ~3.0 | ~4.0",
    "symfony/finder": "~2.8 | ~3.0 | ~4.0",
    "symfony/filesystem": "~2.8 | ~3.0 | ~4.0"
  },
  "require-dev": {
    "cyberspectrum/pharpiler": "~1.0",
    "phpcq/all-tasks": "~1.2",
    "symfony/process": "~2.8 | ~3.0 | ~4.0"
  },
  "autoload": {
    "psr-4": {
      "CyberSpectrum\\ContaoToolBox\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CyberSpectrum\\ContaoToolBox\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/ctb"
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "1.0.x-dev"
    }
  }
